# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/htownautos?schema=public"

# ===========================================
# AWS S3 CONFIGURATION
# ===========================================
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
# CDN base URL (optional) - if set, public media URLs use this instead of direct S3 URLs
# CDN_BASE_URL=https://cdn.htownautos.com

# ===========================================
# SECURITY CONFIGURATION
# RouteOne and DealerTrack Compliance
# ===========================================

# CORS - Dominios permitidos (separados por coma)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200,https://htownautos.com

# ===========================================
# AWS COGNITO AUTHENTICATION
# ===========================================
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_REGION=us-east-1

# Encryption key para datos sensibles (SSN, financial data)
# ENCRYPTION_KEY=your-32-character-encryption-key-here

# ===========================================
# RATE LIMITING
# ===========================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ===========================================
# ROUTEONE CONFIGURATION
# ===========================================
# ROUTEONE_API_URL=https://api.routeone.com
# ROUTEONE_API_KEY=your-routeone-api-key
# ROUTEONE_DEALER_ID=your-dealer-id

# ===========================================
# DEALERTRACK CONFIGURATION
# ===========================================
# DEALERTRACK_API_URL=https://api.dealertrack.com
# DEALERTRACK_API_KEY=your-dealertrack-api-key
# DEALERTRACK_DEALER_ID=your-dealer-id

# ===========================================
# COMPLIANCE & AUDIT
# ===========================================
AUDIT_LOG_RETENTION_DAYS=2555
# 7 años = 2555 días (requerido por RouteOne)

# Enable/disable audit logging
AUDIT_ENABLED=true

# ===========================================
# EXTERNAL INTEGRATIONS
# ===========================================

# SIEM Integration (Splunk, Datadog, etc.)
# SIEM_ENDPOINT=https://your-siem-endpoint.com
# SIEM_API_KEY=your-siem-api-key

# Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password

# ===========================================
# OPTIONAL FEATURES
# ===========================================

# Enable Swagger documentation in production
SWAGGER_ENABLED=true

# Log level (error, warn, log, debug, verbose)
LOG_LEVEL=log
